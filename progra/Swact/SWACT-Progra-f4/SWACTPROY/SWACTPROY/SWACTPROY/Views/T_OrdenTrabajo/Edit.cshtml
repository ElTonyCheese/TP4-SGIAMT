@model SWACTPROY.Models.T_OrdenTrabajo

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Editar Nro @ViewContext.RouteData.Values["id"]</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idOrdenTrabajo" />

            <div class="form-group">
                <label asp-for="progreso" class="control-label"></label>
                <input asp-for="progreso" class="form-control" />
                <span asp-validation-for="progreso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estado" class="control-label"></label>
                <input asp-for="estado" class="form-control" />
                <span asp-validation-for="estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="idSolicitud" class="control-label">Solicitud</label>
                <input asp-for="idSolicitud" class="form-control" />
                <span asp-validation-for="idSolicitud" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
