@model SWACTPROY.Models.T_Cotizacion

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<br />
<h2>Cotizacion de la solicitud Nro @ViewContext.RouteData.Values["id"]</h2>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
            <label asp-for="" class="control-label"></label>
            <input asp-for="" class="form-control"
        </div>*@

            <div class="form-group">
                <label asp-for="nombrepdf" class="control-label"></label>
                @*<input asp-for="estado" class="form-control"     />*@
                <Input class="btn btn-outline-warning" type="file" id="files" asp-for="nombrepdf" />
                <span asp-validation-for="nombrepdf" class="text-danger"></span>
            </div>

            <div class="form-group" style="display:none">
                <label asp-for="estado" class="control-label"></label>
                <input asp-for="estado" class="form-control" value="Pendiente" />
                <span asp-validation-for="estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precio" class="control-label"></label>
                <input asp-for="precio" class="form-control" />
                <span asp-validation-for="precio" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="duracion" class="control-label"></label>
                <input asp-for="duracion" class="form-control" />
                <span asp-validation-for="duracion" class="text-danger"></span>
            </div>

            <div class="form-group" style="display:none">
                <label asp-for="idSolicitud" class="control-label"></label>
                <input asp-for="idSolicitud" value="@ViewContext.RouteData.Values["id"]" class="form-control" />
                <span asp-validation-for="idSolicitud" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-controller="T_Solicitud" asp-action="Index">Regresar</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
