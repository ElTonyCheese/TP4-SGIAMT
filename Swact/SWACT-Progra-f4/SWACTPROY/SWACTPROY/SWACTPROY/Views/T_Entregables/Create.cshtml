@model SWACTPROY.Models.T_Entregables

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear Entregable</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="fecha" class="control-label"></label>
                <input asp-for="fecha" class="form-control" />
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="horaInicio" class="control-label"></label>
                <input asp-for="horaInicio" class="form-control" />
                <span asp-validation-for="horaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="horaFin" class="control-label"></label>
                <input asp-for="horaFin" class="form-control" />
                <span asp-validation-for="horaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estado" class="control-label"></label>
                <input asp-for="estado" value="Pendiente" class="form-control" />
                <span asp-validation-for="estado" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="idOrdenTrabajo" class="control-label"></label>
                <input asp-for="idOrdenTrabajo" value="@ViewContext.RouteData.Values["id"]" class="form-control" />
                <span asp-validation-for="idOrdenTrabajo" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="idUsuario" class="control-label">Asesor</label>
                <select asp-for="idUsuario" class="form-control" asp-items="ViewBag.idAsesor"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="T_OrdenTrabajo" asp-action="Index">Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
