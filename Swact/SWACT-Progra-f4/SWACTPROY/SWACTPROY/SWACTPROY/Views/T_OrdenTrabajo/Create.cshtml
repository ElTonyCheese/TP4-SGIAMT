@model SWACTPROY.Models.T_OrdenTrabajo

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Crear un Orden de Trabajo</h2>

<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group" style="display:none">
                <label  asp-for="progreso" class="control-label"></label>
                <input asp-for="progreso"  value=0 class="form-control" />
                <span asp-validation-for="progreso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estado" class="control-label"></label>
                <input asp-for="estado" value="En progreso" class="form-control" />
                <span asp-validation-for="estado" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="idSolicitud" class="control-label">Solicitud</label>
                <input asp-for="idSolicitud" value="@ViewContext.RouteData.Values["id"]" class="form-control" />
                <span asp-validation-for="idSolicitud" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-controller="T_Solicitud" asp-action="Index">Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
