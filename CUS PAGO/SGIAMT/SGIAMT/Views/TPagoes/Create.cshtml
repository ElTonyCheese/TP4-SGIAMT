@model SGIAMT.Models.TPago

@{
    ViewData["Title"] = "Create";
}

<h2>REGISTRAR PAGO</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VpValor" class="control-label">Valor</label>
                <input asp-for="VpValor" class="form-control" />
                <span asp-validation-for="VpValor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VpFecha" class="control-label">Fecha</label>
                <input asp-for="VpFecha" class="form-control" />
                <span asp-validation-for="VpFecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VpMes" class="control-label">Mes</label>
                <input asp-for="VpMes" class="form-control" />
                <span asp-validation-for="VpMes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VpAño" class="control-label">Año</label>
                <input asp-for="VpAño" class="form-control" />
                <span asp-validation-for="VpAño" class="text-danger"></span>
            </div>
            @*
            <div class="form-group">
                <label asp-for="VpPdf" class="control-label"></label>
                <input asp-for="VpPdf" class="form-control" />
                <span asp-validation-for="VpPdf" class="text-danger"></span>
            </div>
            *@
            <div class="form-group">
                <label asp-for="FkIuDni" class="control-label">Dni de Alumno</label>
                <select asp-for="FkIuDni" class ="form-control" asp-items="ViewBag.FkIuDni"></select>
            </div>
            <div class="form-group">
                <label asp-for="FkIcpId" class="control-label">Copncepto</label>
                <select asp-for="FkIcpId" class ="form-control" asp-items="ViewBag.FkIcpId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Registro de Pagos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
